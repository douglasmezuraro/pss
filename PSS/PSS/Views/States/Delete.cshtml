@model PSS.Models.State
@using PSS.Utils.Constants

@{
    ViewBag.Title = View.Delete;
}

<h2>@View.Delete</h2>

<h3>@View.ConfirmDelete</h3>
<div>
    <h4>@Html.DisplayNameForModel()</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UF)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@View.Delete" class="btn btn-default" /> |
            @Html.ActionLink(View.Index, "Index")
        </div>
    }
</div>
