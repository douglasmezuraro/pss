@model IEnumerable<PSS.Models.State>
@using PSS.Utils.Constants

@{
    ViewBag.Title = View.Index;
}

<h2>@View.Index</h2>

<p>
    @Html.ActionLink(View.Create, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UF)
        </td>
        <td>
            @Html.ActionLink(View.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(View.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(View.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
