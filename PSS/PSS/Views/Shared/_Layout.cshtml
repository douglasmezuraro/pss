<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PSS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Usuários", "Index", "Users")</li>
                    <li>@Html.ActionLink("Cidades", "Index", "Cities")</li>
                    <li>@Html.ActionLink("Categorias", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Fornecedores", "Index", "Providers")</li>
                    <li>@Html.ActionLink("Fabricantes", "Index", "Manufacturers")</li>
                    <li>@Html.ActionLink("Produtos", "Index", "Products")</li>
                    <li>@Html.ActionLink("Pedidos", "Index", "Orders")</li>
                </ul>
                <div class="pull-right">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Sair", "Logoff", "Users")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PSS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
