@model PSS.Models.SaleOrder
@using PSS.Utils.Constants

@{
    ViewBag.Title = View.Create;
}

<h2>@View.Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>@Html.DisplayNameForModel()</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="panel panel-default">
        <div class="panel-heading">@Html.DisplayNameFor(model => model.Items)</div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Product.ShortDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Product.FullDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Product.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Product.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Product.Unit)
                    </th>
                    <th></th>
                </tr>
            </table>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">@Html.DisplayNameFor(model => model.Freights)</div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Freights.FirstOrDefault().Value)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Freights.FirstOrDefault().DeliveryDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Freights.FirstOrDefault().FreightType)
                    </th>
                    <th></th>
                </tr>
            </table>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">@Html.DisplayNameFor(model => model.Installments)</div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Installments.FirstOrDefault().Value)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Installments.FirstOrDefault().PaymentType)
                    </th>
                    <th></th>
                </tr>
            </table>

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TotalValue, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TotalValue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TotalValue, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <input type="submit" value="@View.Create" class="btn btn-default" />
    </div>
</div>
}

<br />
<div>
    @Html.ActionLink(View.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
